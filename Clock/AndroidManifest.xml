<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <!-- Changed icon to our own-->
    <!-- Enabled debugging-->
    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcheractual"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- Locked in screen size and only potrait mode -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".timerActivity"
            android:label="Timer" >
            <intent-filter>
                <action android:name=".timerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".stopwatchActivity"
            android:label="Stopwatch" >
            <intent-filter>
                <action android:name=".stopwatchActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".calendarActivity"
            android:label="Calendar" >
            <intent-filter>
                <action android:name=".calendarActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
